<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_juego"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameActivity" >

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:isIndicator="true" />

    <TextView
        android:id="@+id/txtAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labQuestion"
        android:layout_alignBottom="@+id/labQuestion"
        android:layout_toRightOf="@+id/labQuestion"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_size_question"
        style="@style/cuestionStyle"/>

    <TextView
        android:id="@+id/labQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_Resultado"
        android:layout_alignBottom="@+id/txt_Resultado"
        android:layout_alignRight="@+id/Button04"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_size_question"
        style="@style/cuestionStyle"/>

    <TextView
        android:id="@+id/txt_Resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_question"
        android:layout_marginLeft="250dp"
        android:textSize="@dimen/text_size_question"
        style = "@style/cuestionStyle"/>

    <Button
        android:id="@+id/Button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Button09"
        android:layout_alignBottom="@+id/Button09"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/Button09"
        android:background="@drawable/piedra"
        android:text=" 0 "
        android:textSize="@dimen/text_size_piedra"/>

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Button02"
        android:layout_alignBottom="@+id/Button02"
        android:textColor="#000000"
        android:background="@drawable/piedra"
        android:layout_toLeftOf="@+id/Button02"
        android:text=" 1 "
        android:textSize="@dimen/text_size_piedra"/>

    <Button
        android:id="@+id/Button02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Button03"
        android:layout_alignBottom="@+id/Button03"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/Button03"
        android:background="@drawable/piedra"
        android:text=" 2 "
        android:textSize="@dimen/text_size_piedra"/>

    <Button
        android:id="@+id/Button03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/piedra"
        android:text=" 3 "
        android:textSize="@dimen/text_size_piedra"/>

    <Button
        android:id="@+id/Button04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Button03"
        android:layout_alignBottom="@+id/Button03"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/Button03"
        android:background="@drawable/piedra"
        android:text=" 4 "
        android:textSize="@dimen/text_size_piedra"/>

    <Button
        android:id="@+id/Button05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Button04"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/Button04"
        android:layout_toRightOf="@+id/Button04"
        android:background="@drawable/piedra"
        android:text=" 5 "
        android:textSize="@dimen/text_size_piedra"/>

    <Button
        android:id="@+id/Button06"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button01"
        android:layout_alignLeft="@+id/Button01"
        android:background="@drawable/piedra"
        android:text=" 6 "
        android:textSize="@dimen/text_size_piedra"/>

    <Button
        android:id="@+id/Button07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/Button06"
        android:layout_alignBottom="@+id/Button06"
        android:layout_toRightOf="@+id/Button06"
        android:background="@drawable/piedra"
        android:text=" 7 "
        android:textSize="@dimen/text_size_piedra"/>

    <Button
        android:id="@+id/Button08"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Button07"
        android:layout_alignBottom="@+id/Button07"
        android:layout_toRightOf="@+id/Button07"
        android:background="@drawable/piedra"
        android:text=" 8 "
        android:textSize="@dimen/text_size_piedra"/>

    <Button
        android:id="@+id/Button09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/Button08"
        android:layout_alignBottom="@+id/Button08"
        android:layout_toRightOf="@+id/Button08"
        android:background="@drawable/piedra"
        android:text=" 9 "
        android:textSize="@dimen/text_size_piedra"/>

    <Button
        android:id="@+id/Button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Button0"
        android:layout_alignTop="@+id/Button05"
        android:layout_toRightOf="@+id/Button0"
        android:text=" ← "
        android:background="@drawable/piedra"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_piedra"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAnswer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_piedra_question" />

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/Button0"
        android:layout_alignRight="@+id/Button10"
        android:layout_toRightOf="@+id/Button0"
        android:background="@drawable/piedra"
        android:text="Ok"
        android:textSize="@dimen/text_size_piedra"/>

    <TextView
        android:id="@+id/puntajeMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/progressBar"
        android:layout_below="@+id/labPuntajeMax"
        android:textSize="@dimen/text_size_max_score"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/labPuntajeMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/progressBar"
        android:layout_alignTop="@+id/ratingBar"
        android:text="Puntaje Máximo"
        android:textSize="@dimen/text_size_max_score"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

</RelativeLayout>