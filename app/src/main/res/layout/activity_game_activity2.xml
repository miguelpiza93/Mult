<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_game2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_empezar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameActivity2" >

    <Button
        android:id="@+id/button1J2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/preguntaJ2"
        android:background="@drawable/piedra"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_piedra"
        android:visibility="visible" />

    <Button
        android:id="@+id/button2J2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/preguntaJ2"
        android:background="@drawable/piedra"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_piedra"
        android:visibility="visible" />

    <TextView
        android:id="@+id/preguntaJ2"
        style="@style/cuestionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_size_question"
        android:visibility="visible"
        tools:text="2 x 1" />

    <TextView
        android:id="@+id/puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/progressBarJ2"
        android:layout_marginRight="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_max_score"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBarJ2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_progress_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/puntos"
        android:visibility="visible" />

    <TextView
        android:id="@+id/labPuntajeMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/progressBarJ2"
        android:layout_marginLeft="10dp"
        android:text="Puntaje MÃ¡ximo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_max_score"
        android:visibility="visible" />

    <TextView
        android:id="@+id/puntajeMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labPuntajeMax"
        android:layout_alignBottom="@+id/labPuntajeMax"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/labPuntajeMax"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_max_score"
        android:visibility="visible" />

</RelativeLayout>